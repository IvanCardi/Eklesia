<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name='NoBarTheme' parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:buttonStyle">@style/Base.Widget.AppCompat.Button.Borderless</item>
        <item  name="android:imageButtonStyle">@style/Base.Widget.AppCompat.Button.Borderless</item>
        <item name="android:windowContentTransitions">true</item>
        <!-- specify enter and exit transitions -->
        <item name="android:windowEnterTransition">@transition/fade</item>
        <item name="android:windowExitTransition">@transition/explode</item>

    </style>
</resources>